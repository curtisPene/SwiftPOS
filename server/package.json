    "@types/cors": "^2.8.19",
    "@types/validator": "^13.9.0",
    "@types/jest": "^30.0.0",
    "@types/supertest": "^6.0.3",
    "typescript": "^5.9.2",
    "ts-node": "^10.9.2",
    "nodemon": "^3.1.10",
    "eslint": "^8.46.0",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "jest": "^30.0.5",
    "ts-jest": "^29.4.1",
    "mongodb-memory-server": "^10.2.0",
    "supertest": "^7.1.4"
