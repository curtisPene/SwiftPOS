  "description": "SwiftPOS - Multi-tenant POS system server with offline sync and WebSocket support",
  "main": "dist/Server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/Server.js",
    "dev": "nodemon --exec ts-node src/Server.ts",
